    <!-- CHAPTER 6  (<list> goes in place of <VIEW_TYPE> ...) _list matters-->
    <record id="estate_property_view_list" model="ir.ui.view">
        <!-- trying id="MODEL_view_TYPE" above -->

        <field name="name">NAME OF LIST VIEW</field>

        <!-- Q:  model vs res_model -->
        <!-- A: according to random web answer: -->
        <!-- res_model = something about _action window -->
        <!-- src_model = wizard and button click? -->
        <!-- model = used for a view - the "model the view belongs to" -->
        <field name="model">estate.property</field>

        <field name="arch" type="xml">
            <list name="properties">
                <!-- field name="title"/ -->
                <!-- this causes: Field "title" does not exist in model "estate.property" -->


                <!-- not allowed to do this: field name="name">Name</field -->
                <!-- name="..." MUST match vars in models/...py -->
                <field name="name" string="Title"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="bedrooms"/>

                <!-- string="" is how you customize the name/caption displayed to the user in the UI -->
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Available From"/>

            </list>
        </field>
    </record>



    <!-- Q: how does this get picked? -->
    <!-- A: according to OLD docs https://www.odoo.com/documentation/16.0/developer/reference/backend/views.html#view-matching -->
    <!--  you dont put the id anywhere, the view is automatically matched based on model and type! -->

    <!-- Chapter 6: Form -->
    <!-- this form gets used for both viewing and creating estate property objects - -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <!-- the suffix here must be "_form" - when it was "_list" the server failed to start -->

        <field name="name">NAME OF FORM VIEW</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="MY FORM">
                <sheet>

                    <!-- name="" is name of the function.  type="object" means it triggers an odoo object action -->
                    <button name="action_start_wizard" string="Wizard Button" type="object" class="oe_stat_button"/>
                    <group>
                        <!-- <group> puts fields into columns, inside the group auto labeled -->
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="postcode"/>
                        <field name="date_availability"/>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                            </group>
                            <label for="garden_orientation"/>
                            <field name="garden_orientation"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--   chapter 6 search -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">NAME OF SEARCH VIEW</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="test_search">
                <field name="name"/>
                <field name="selling_price"/>
                <field name="description"/>
                 <separator/>
                <!--    filter, group by -->
                <filter string="Available Properties" name="available_properties" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter string="zip 12345" name="test_zip" domain="[('postcode', '=', '12345')]"/>
            </search>
        </field>
    </record>



</odoo>