<odoo>
    <!-- Action to Open Estate Property List/Forms Root, 1st level, inner level-->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate properties Action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
    </record>



    <!-- DOCS:  https://www.odoo.com/documentation/18.0/developer/reference/user_interface/view_records.html -->
    <!-- THIS IS THE BASIC VIEW STRUCTURE: -->
